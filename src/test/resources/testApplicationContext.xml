<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:tx="http://www.springframework.org/schema/tx"
   xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
    default-autowire="byName">

    <tx:annotation-driven />

    <context:component-scan base-package="com.flexpoker" />

    <bean id="entityManagerFactory" class="com.flexpoker.misc.mock.LocalContainerEntityManagerFactoryBeanMock" />

    <bean id="transactionManager" class="com.flexpoker.misc.mock.JpaTransactionManagerMock" />

    <bean id="messageTemplate" class="com.flexpoker.misc.mock.MessageTemplateMock" />

    <bean id="dealCardActionsBso" class="com.flexpoker.bso.DealCardActionsBsoImpl">
        <property name="deckBso" ref="deckBsoMock" />
        <property name="realTimeGameBso" ref="realTimeGameBsoMock" />
    </bean>

    <bean id="deckBso" class="com.flexpoker.bso.DeckBsoImpl" />

    <bean id="gameBso" class="com.flexpoker.bso.GameBsoImpl">
        <property name="gameDao" ref="gameDaoMock" />
        <property name="userBso" ref="userBsoMock" />
        <property name="realTimeGameBso" ref="realTimeGameBsoMock" />
        <property name="tableBalancerBso" ref="tableBalancerBsoMock" />
    </bean>

    <bean id="gameEventBso" class="com.flexpoker.bso.GameEventBsoImpl">
        <property name="gameBso" ref="gameBsoMock" />
        <property name="deckBso" ref="deckBsoMock" />
        <property name="realTimeGameBso" ref="realTimeGameBsoMock" />
        <property name="seatStatusBso" ref="seatStatusBsoMock" />
        <property name="potBso" ref="potBsoMock" />
        <property name="handEvaluatorBso" ref="handEvaluatorBsoMock" />
    </bean>

    <bean id="handEvaluatorBso" class="com.flexpoker.bso.HandEvaluatorBsoImpl" />

    <bean id="playerActionsBso" class="com.flexpoker.bso.PlayerActionsBsoImpl">
        <property name="realTimeGameBso" ref="realTimeGameBsoMock" />
        <property name="potBso" ref="potBsoMock" />
        <property name="seatStatusBso" ref="seatStatusBsoMock" />
        <property name="deckBso" ref="deckBsoMock" />
    </bean>

    <bean id="potBso" class="com.flexpoker.bso.PotBsoImpl" />

    <bean id="realTimeGameBso" class="com.flexpoker.bso.RealTimeGameBsoImpl" />

    <bean id="seatStatusBso" class="com.flexpoker.bso.SeatStatusBsoImpl">
        <property name="validationBso" ref="validationBsoMock" />
    </bean>

    <bean id="tableBalancerBso" class="com.flexpoker.bso.TableBalancerBsoImpl">
        <property name="validationBso" ref="validationBsoMock" />
    </bean>

    <bean id="userBso" class="com.flexpoker.bso.UserBsoImpl">
        <property name="userDao" ref="userDaoMock" />
    </bean>

    <bean id="validationBso" class="com.flexpoker.bso.ValidationBsoImpl" />

    <bean id="flexController" class="com.flexpoker.controller.FlexControllerImpl">
        <property name="gameBso" ref="gameBsoMock" />
        <property name="gameEventBso" ref="gameEventBsoMock" />
        <property name="eventManager" ref="eventManagerMock" />
        <property name="dealCardActionsBso" ref="dealCardActionsBsoMock" />
    </bean>

</beans>
